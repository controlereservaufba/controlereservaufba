                            <li class="dropdown">
                                 
                                 <% if user_signed_in? %>
                                <a id="user-profile" href="#" class="dropdown-toggle" data-toggle="dropdown"><img src="https://cdn.pixabay.com/photo/2012/04/26/19/43/profile-42914_960_720.png" class="img-responsive img-thumbnail img-circle"><%= current_user.username %></a>
                                <ul class="dropdown-menu dropdown-block" role="menu">
                                    
                                    <li><a href="/perfil">Editar Perfil</a></li>
                                    <li><a href="/logout">Sair</a></li>
                                    <%end%>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
