 <p id="notice"><%= notice %></p>

 <h4 class="page-header">Controle</h4>

 <div id="list" class="row">
 <div class="table-responsive col-md-12">
 <table class="table table-striped" cellspacing="0" cellpadding="0" width="100%" height="100" >
  <thead>
    <tr>
        <th>Reserva</th>
        <th>Data Sbertura</th>
        <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @controles.each do |controle| %>
      <tr>
        <td><%= controle.reserva.sigla %></td>
        <td><%= formato_data(controle.data_abertura) %></td>
        <td><%= controle.status %></td>
        <td class="actions">
          <%= link_to 'Visualizar', controle,  class: 'btn btn-warning btn-xs'%>
          <%= link_to 'Abrir', edit_controle_path(controle), class: 'btn btn-primary btn-xs' %>
          <%= link_to 'Fechar', edit_controle_path(controle), class: 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<!-- Paginação -->
 <div class="text-center">
  <div class="pagination">
    <table>
     <tr>
       <td><%= paginate @controles %></td>
     <tr>
    </table>
  </div>
 </div>
<!--Fim Paginação-->
</div>
</div>
